<div class='container'>
  <div class='posts-wrapper'>
    <div class='row'>
      <% @posts.each do |post| %>
        <div class='post'>
          <div class='post-head'>
            <div class="name">Ben Walker</div>
          </div>
          <div class='image'>
            <%= link_to(image_tag(post.image.url(:medium), class:'img-responsive center-block'), post_path(post)) %>
          </div>
          <p class="caption"><%= post.caption %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
