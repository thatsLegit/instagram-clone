<div id="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h1>Join Photogram</h1>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body form-group">
              <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                input_html: { class: 'input-lg form-control' },
                placeholder: "Email"
              %>
              <%= f.input :user_name,
                required: true,
                label: false,
                input_html: { class: 'input-lg form-control' },
                placeholder: "User Name"
              %>
              <%= f.input :password,
                required: true,
                label: false,
                input_html: { class: 'input-lg form-control' },
                placeholder: "Password"
              %>
              <%= f.input :password_confirmation,
                required: true,
                label: false,
                input_html: { class: 'input-lg form-control' },
                placeholder: "Confirm Password"
              %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'btn btn-lg btn-info btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
